<div class="page-header">
  <h3>
    Pages
    <a href="/pages/new" class="btn btn-lg btn-success">New Page</a>
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Created</th>
        <th>Page</th>
        <th>Delete</th>
      </tr>
      <% @pages.each do |page| %>
        <% if page.user == current_user %>
          <tr>
            <td><%= page.title %></td>
            <td>
               <%= page.created_at.strftime('%B %e, %Y at %l:%M%P') %>
            </td>
            <td>
                <a href="/pages/<%= page.id %>" class="btn btn-primary">View</a>
                <a href="/pages/<%= page.id %>/edit" class="btn btn-warning">Edit</a>
            </td>
            <td>
                <a href="/delete_page/<%= page.id %>" data-confirm="Are you sure? This will delete all the content in the page." class="btn btn-danger" rel="nofollow">Delete</a>
            </td>
          </tr>
        <% end %>

      <% end %>
    </table>
  </div>
</div>
